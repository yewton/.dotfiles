# -*- mode: gitconfig; -*-
[color]
	ui = auto

[alias]
	alias = "!f(){ git config -l | grep alias; };f"
	st = status --short --branch
	ci = commit
	co = checkout
	cp = cherry-pick
	br = branch
	showtrackedignored = "ls-files -i --exclude-standard"

[core]
	excludesfile = ~/.gitignore_global

[include]
	path = ~/.gitconfig.local
